#!/usr/bin/env bash

export HOME=/tmp/home
ln -fs "$(pwd)" $HOME
bom=$'\xef\xbb\xbf'
cat <(echo -n $bom) .code.tio > .code.tio.ps1
cat <(echo -n $bom) .input.tio > .input.tio.txt

/opt/microsoft/dotnet/dotnet /opt/microsoft/powershell/6.0.0-beta.1/powershell.ni.exe -Command "cd; $([[ $0 == *-core ]] || echo '/opt/microsoft/home/powershell/aliases.ps1;') Get-Content .input.tio.txt | ./.code.tio.ps1" "$@"
